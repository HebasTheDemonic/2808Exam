<Window x:Class="_2808Exam_Q1.ButtonParameterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_2808Exam_Q1"
        mc:Ignorable="d"
        Title="ButtonParameterWindow" Height="300" Width="300">
    <StackPanel>
        <WrapPanel VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="20">
            <TextBlock Text="Button Width :"/>
            <TextBlock x:Name="WidthTxt"
                       Margin="10,0,0,0" 
                       Width="30"/>
        </WrapPanel>
        <WrapPanel VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="20">
            <TextBlock Text="Button Height :"/>
            <TextBlock x:Name="HeightTxt" 
                       Margin="10,0,0,0"
                       Width="30"/>
        </WrapPanel>
        <WrapPanel VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Margin="20">
            <TextBlock Text="Button Text :"/>
            <TextBlock x:Name="TextTxt" Margin="10,0,0,0" Width="30"/>
        </WrapPanel>
    </StackPanel>
</Window>